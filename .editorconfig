root = true

[*]
indent_style = space
indent_size = 4
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.{yml,toml,yaml,json}]
indent_style = space
indent_size = 2

[*.{html,css}]
indent_style = space
indent_size = 2

[*.{md,txt}]
indent_style = space
trim_trailing_whitespace = false
max_line_length = 80
